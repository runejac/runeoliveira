  /* Phoenix */
  #background {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    height: auto;
    width: auto;
    z-index: -2;
    pointer-events: auto;
  }

  #background::after {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    background-color: rgba(0, 0, 0, 0.773);
    z-index: 1;
  }

  .text-glow {
    text-shadow:
      0 0 10px var(--glow-color),
      0 0 20px var(--glow-spread-color),
      0 0 30px var(--glow-spread-color);
    animation: glow 3s ease-in-out infinite alternate;
  }

  @keyframes glow {
    from {
      text-shadow:
        0 0 10px var(--glow-color),
        0 0 20px var(--glow-spread-color),
        0 0 30px var(--glow-spread-color);
    }
    to {
      text-shadow:
        0 0 15px var(--enhanced-glow-color),
        0 0 25px var(--enhanced-glow-spread-color),
        0 0 35px var(--enhanced-glow-spread-color);
    }
  }

