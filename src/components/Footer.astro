---
import { Icon } from 'astro-icon/components';
---

<footer class="footer-container">
  <div class="footer-content">
    <div class="social-media-container">
      <ul>
        <li>
          <a
            href="https://www.linkedin.com/in/rune-daniel-jacobsen-oliveira/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="open linkedin profile"
          >
            <Icon name="brand-linkedin" class="icon-link" width="40" height="40" />
          </a>
        </li>
        <li>
          <a
            href="https://github.com/runejac"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="open github profile"
          >
            <Icon name="brand-github" class="icon-link" width="40" height="40" />
          </a>
        </li>
      </ul>
    </div>
    <div class="designed-by-container">
      <a
        href="https://github.com/runejac/runeportfolio_next"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="open this website's github source code"
      >
        Designed & built by Rune Oliveira
      </a>
    </div>
    <div class="copyright-container">
      <p>
        &copy; {new Date().getFullYear()} - Rune Oliveira
      </p>
    </div>
  </div>
</footer>
<style>
  .footer-container {
    width: 100%;
    height: 200px;
    background-image: linear-gradient(#010500, #0105006b), url('/images/mac-code.png');
    background-size: 100%;
    background-repeat: no-repeat;
    background-position: center 75%;
    overflow: hidden;
    margin-top: auto; /* Changed from margin-top: 2rem */
    position: relative; /* Added */
    bottom: 0; /* Added */
    left: 0; /* Added */
  }

  .footer-content {
    display: flex;
    position: relative;
    background: none;
    width: fit-content;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: flex-start;
    height: 100%;
    padding-left: 2rem;
    z-index: 1;
  }

  .social-media-container {
    background: none;
    width: fit-content;
  }

  ul {
    display: flex;
    list-style: none;
    gap: 2rem;
    background: none;
    padding: 0;

    li,
    a {
      background: none;
    }
  }

  .icon-link {
    color: #fff;
    position: relative;
    transition: var(--transition);

    &:hover {
      transform: translateY(-3px);
      transition: var(--transition);
    }
  }

  .designed-by-container {
    background: none;
  }

  .designed-by-container > a {
    background-color: transparent;
    font-size: 1rem;
    text-decoration: none;

    &:hover {
      text-decoration: underline;
    }
  }

  .copyright-container {
    background: none;
    display: flex;
    flex-direction: column;
  }

  .copyright-container > p {
    background: none;
    font-size: 0.8rem;
    position: relative;
  }

  @media (min-width: 50em) {
    .designed-by-bontainer > a:hover {
      transition: var(--transition);
    }
  }

  @media screen and (max-width: 768px) {
    .footer-container {
      background-size: 230%;
      background-position: 20% 50%;
    }
  }
</style>
